extends partial/base

include partial/post-preview

block header
    include partial/index-header

block content
    div(class="container", role="main")
        .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                .posts-list
                    - page.posts.each(function (post) {
                    +post_preview(post)
                    - })
                ul.pager.main-pager
                    if page.prev
                        li.previous
                            a.btn.btn-default(href=url_for(page.prev === 1 ? "/" : ("/" + config.pagination_dir + "/" + page.prev)))!= '&larr; Previous page'
                    if page.next
                        li.next
                            a.btn.btn-default(href=url_for("/" + config.pagination_dir + "/" + page.next))!= 'Next page &rarr;'



    script(id="dsq-count-scr", src="//#{theme.comment.id}.disqus.com/count.js")